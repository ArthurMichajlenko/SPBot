{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Go Run TG",
            "type": "shell",
            "command": "go run *.go",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Go Run VB",
            "type": "shell",
            "command": "cd VbBot; go run *.go",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Go Build TG",
            "type": "shell",
            "command": "go build",
            "problemMatcher": [
                "$go"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Go Build TG Linux",
            "type": "shell",
            "command": "go build",
            "options": {
                "env": {
                    "GOOS":"linux",
                    "GOARCH":"amd64"
                }
            },
            "problemMatcher": [
                "$go"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Go Build VB",
            "type": "shell",
            "command": "cd VbBot; go build",
            "problemMatcher": [
                "$go"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Go Build VB Linux",
            "type": "shell",
            "command": "cd VbBot; go build",
            "options": {
                "env": {
                    "GOOS": "linux",
                    "GOARCH": "amd64"
                }
            },
            "problemMatcher": [
                "$go"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ] 
}